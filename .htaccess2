# Configuración base
Options -Indexes -MultiViews +FollowSymLinks
FileETag None
ServerSignature Off

# Forzar HTTPS y dominio preferido
RewriteEngine On
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteRule ^ https://profematiasprestes.misitioweb.com.uy%{REQUEST_URI} [NE,R=301,L]

# Compresión GZIP/Brotli
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/json
  AddOutputFilterByType DEFLATE application/javascript application/x-javascript
  AddOutputFilterByType DEFLATE text/xml application/xml image/svg+xml
</IfModule>

# Cacheo de recursos estáticos
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  
  # Materiales educativos
  ExpiresByType application/pdf "access plus 6 months"
  ExpiresByType application/zip "access plus 6 months"
  
  # Multimedia
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType video/mp4 "access plus 1 year"
</IfModule>

# Seguridad mejorada
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "interest-cohort=()"
  Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Optimización de imágenes WebP
<IfModule mod_rewrite.c>
  RewriteCond %{HTTP_ACCEPT} image/webp
  RewriteCond %{DOCUMENT_ROOT}/$1.webp -f
  RewriteRule ^(img/.+)\.(png|jpg)$ $1.webp [T=image/webp,L]
</IfModule>

# Manejo de errores personalizados
ErrorDocument 404 /404.shtml
ErrorDocument 403 /403.shtml
ErrorDocument 500 /500.shtml

# Protección de archivos sensibles
<FilesMatch "\.(sql|ini|log|sh|env)$">
  Require all denied
</FilesMatch>

# Optimización para materiales descargables
<FilesMatch "\.(pdf|zip|docx)$">
  Header set Content-Disposition "attachment"
  Header set X-Content-Type-Options "nosniff"
</FilesMatch>
